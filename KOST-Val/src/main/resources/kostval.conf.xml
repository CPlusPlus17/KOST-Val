<?xml version="1.0"?>
<configuration>
	<pathtojhoveconfig>KOST-Val\configuration\jhove.conf</pathtojhoveconfig>
	<pathtoworkdir>work_KOST-Val</pathtoworkdir>
	
<pdfa>
	<!--no verwenden wenn pdfa nicht validiert werden soll, ansonsten yes-->
	<pdfavalidation>yes</pdfavalidation>	
	<!--Pfad zum PDF/A-Manager von PDFTron-->	
	<pathtopdftronexe>Drittapplikationen\pdfa\pdfa.exe</pathtopdftronexe>
	<!--Angeben welche Conformancelevel mindestens erreicht werden muss-->
	<!--no verwenden wenn diese Version nicht erlaubt ist-->
	<pdfa1>1B</pdfa1>	<!--1A / 1B / no-->
	<pdfa2>2B</pdfa2>	<!--2A / 2B / 2U / no-->
</pdfa>

<siard>
	<!--no verwenden wenn siard nicht validiert werden soll, ansonsten yes-->
	<siardvalidation>yes</siardvalidation>	
	<!--SIARD-Konfiguration-->	
	<table-rows-limit>20000</table-rows-limit>
</siard>
	
<tiff>
	<!--no verwenden wenn tiff nicht validiert werden soll, ansonsten yes-->
	<tiffvalidation>yes</tiffvalidation>	
	<!--TIFF-Praezisierungen-->
	<!--Wenn erlaubt "Text" einfuegen ansonsten "0"-->
	<allowedcompression>
		<allowedcompression1>uncompressed</allowedcompression1>		<!--0 / uncompressed-->
		<allowedcompression2>CCITT 1D</allowedcompression2>			<!--0 / CCITT 1D-->
		<allowedcompression3>CCITT Group 3</allowedcompression3>	<!--0 / CCITT Group 3-->
		<allowedcompression4>CCITT Group 4</allowedcompression4>	<!--0 / CCITT Group 4-->
		<allowedcompression5>LZW</allowedcompression5>				<!--0 / LZW-->
		<allowedcompression7>0</allowedcompression7>				<!--0 / ISO JPEG-->
		<allowedcompression8>0</allowedcompression8>				<!--0 / Deflate-->
		<allowedcompression32773>PackBits</allowedcompression32773>	<!--0 / PackBits-->
	</allowedcompression>
	<allowedphotointer>
		<allowedphotointer0>white is zero</allowedphotointer0>		<!--0 / white is zero-->
		<allowedphotointer1>black is zero</allowedphotointer1>		<!--0 / black is zero-->
		<allowedphotointer2>RGB</allowedphotointer2>				<!--0 / RGB-->
		<allowedphotointer3>palette color</allowedphotointer3>		<!--0 / palette color-->
		<allowedphotointer4>0</allowedphotointer4>					<!--0 / transparency mask-->
		<allowedphotointer5>0</allowedphotointer5>					<!--0 / CMYK-->
		<allowedphotointer6>0</allowedphotointer6>					<!--0 / YCbCr-->
		<allowedphotointer8>0</allowedphotointer8>					<!--0 / CIE L*a*b*-->
	</allowedphotointer>
	<allowedbitspersample>
		<allowedbitspersample1>1</allowedbitspersample1>			<!--0 / 1-->
		<allowedbitspersample2>0</allowedbitspersample2>			<!--0 / 2-->
		<allowedbitspersample4>4</allowedbitspersample4>			<!--0 / 4-->
		<allowedbitspersample8>8</allowedbitspersample8>			<!--0 / 8-->
		<allowedbitspersample16>16</allowedbitspersample16>			<!--0 / 16-->
		<allowedbitspersample32>0</allowedbitspersample32>			<!--0 / 32-->
		<allowedbitspersample64>0</allowedbitspersample64>			<!--0 / 64-->
	</allowedbitspersample>
	<allowedother>
		<allowedmultipage>1</allowedmultipage>						<!--0 / 1-->
		<allowedtiles>0</allowedtiles>								<!--0 / 1-->
		<allowedsize>0</allowedsize>								<!--0 / 1-->
	</allowedother>
</tiff>

<sip>
	<allowedlengthofpaths>179</allowedlengthofpaths>
	<allowedlengthoffiles>40</allowedlengthoffiles>
	<allowedsipname>SIP_[1-2][0-9]{3}[0-1][0-9][0-3][0-9]_\\w{3}</allowedsipname>
	<pathtoworkdir>work_SIP-Val</pathtoworkdir>
	<pathtodroidsignature>KOST-Val\configuration\KaD_SignatureFile_V70.xml</pathtodroidsignature>
	<allowedversionbar1>1</allowedversionbar1>
	<allowedversionbar4ech1>1</allowedversionbar4ech1>
	<allowedformats>
		<allowedformat>	<puid>TXT</puid>	<extension>txt</extension>				<comment>Plain Text file</comment>			</allowedformat>
		<allowedformat>	<puid>TIFF</puid>	<extension>tif, tiff</extension>		<comment>keine Versionen</comment>			</allowedformat>
		<allowedformat>	<puid>JP2</puid>	<extension>jp2, jpg2, j2c</extension>	<comment>JPEG2000</comment>					</allowedformat>
		<allowedformat>	<puid>PDFA1</puid>	<extension>pdf</extension>				<comment>Erkennung PDF/A-1</comment>		</allowedformat>
		<allowedformat>	<puid>PDFA2</puid>	<extension>pdf</extension>				<comment>Erkennung PDF/A-2</comment>		</allowedformat>
		<allowedformat>	<puid>WAVE</puid>	<extension>wav, wave</extension>		<comment>Waveform Audio</comment>			</allowedformat>
		<allowedformat>	<puid>CSV</puid>	<extension>csv</extension>				<comment>Comma Separated Values</comment>	</allowedformat>
		<allowedformat>	<puid>SIARD</puid>	<extension>siard</extension>			<comment>Erkennung SIARD</comment>			</allowedformat>
	</allowedformats>
</sip>	
</configuration>
